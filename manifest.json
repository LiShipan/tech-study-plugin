{
    "author": "xu22web",
    "name": "tech-study-plugin",
    "description": "A browser plugin helps you study joyfully on xuexi.com.",
    "version": "0.0.1",
    "manifest_version": 3,
    "background": {
        "service_worker": "/dist/background/index.js"
    },
    "permissions": [
        "storage",
        "activeTab",
        "scripting",
        "notifications",
        "cookies",
        "debugger"
    ],
    "host_permissions": [
        "https://www.xuexi.cn/"
    ],
    "action": {
        "default_title": "任务面板",
        "default_icon": {
            "16": "/dist/assets/icon16.png",
            "32": "/dist/assets/icon32.png",
            "48": "/dist/assets/icon48.png",
            "128": "/dist/assets/icon128.png"
        }
    },
    "icons": {
        "16": "/dist/assets/icon16.png",
        "32": "/dist/assets/icon32.png",
        "48": "/dist/assets/icon48.png",
        "128": "/dist/assets/icon128.png"
    },
    "content_scripts": [
        {
            "js": [
                "/dist/inject/home/index.js"
            ],
            "matches": [
                "https://www.xuexi.cn/",
                "https://www.xuexi.cn/index.html"
            ],
            "run_at": "document_start"
        },
        {
            "js": [
                "/dist/inject/readAndWatch/index.js"
            ],
            "matches": [
                "https://www.xuexi.cn/lgpage/detail/index.html?id=*"
            ],
            "run_at": "document_start"
        },
        {
            "js": [
                "/dist/inject/exam/index.js"
            ],
            "matches": [
                "https://pc.xuexi.cn/points/exam-practice.html"
            ],
            "run_at": "document_start"
        }
    ]
}